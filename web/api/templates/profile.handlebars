<svg
  viewBox="0 0 1200 630"
  style="font-size: 24px; font-family: Lilita One;"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
>
  <defs>
    <filter id="shadow-48">
      <feDropShadow dx="0" dy="6" stdDeviation="0"></feDropShadow>
    </filter>
    <filter id="shadow-24">
      <feDropShadow dx="0" dy="3" stdDeviation="0"></feDropShadow>
    </filter>
  </defs>

  <image
    xlink:href="{{background}}"
    width="100%"
    height="100%"
    preserveAspectRatio="xMidYMid slice"
  />

  <text
    x="1160"
    y="576"
    font-size="24px"
    fill="white"
    fill-opacity="0.5"
    text-anchor="end"
    style="filter: url(#shadow-24)"
  >
    {{timestamp}}
  </text>
  <text
    x="1160"
    y="600"
    font-size="24px"
    fill="white"
    fill-opacity="0.5"
    text-anchor="end"
    style="filter: url(#shadow-24)"
  >
    {{attribution}}
  </text>

  <g transform="translate(40, 30)">
    {{#each headers}}
      <g transform="translate(0, {{this.yOffset}})">
        <image xlink:href="{{this.image}}" width="64" height="64" />
        <text
          x="80"
          y="32"
          font-size="48px"
          fill="{{this.color}}"
          style="filter: url(#shadow-48)"
        >
          {{this.title}}
        </text>

        <text
          x="80"
          y="64"
          font-size="24px"
          fill="white"
          style="filter: url(#shadow-24)"
        >
          {{this.subtitle}}
        </text>
      </g>
    {{/each}}
    <g transform="translate(0, 180)">
      <rect
        x="0"
        y="0"
        width="500"
        height="390"
        rx="16"
        fill="black"
        fill-opacity="0.3"
        stroke-width="3"
      ></rect>
      {{#each stats}}
        <g transform="translate({{this.xOffset}}, {{this.yOffset}})">
          <path
            d="M24,42 L28,6 A2,2 0 0 1 30,4 L208,4 A2,2 0 0 1 210,6 L206,42 A2,2 0 0 1 204,44 L26,44 A2,2 0 0 1 24,42 Z"
            stroke="black"
            fill="black"
            fill-opacity="0.5"
          ></path>

          <image xlink:href="{{this.image}}" width="48" height="48" />

          <text
            x="124"
            y="32"
            font-size="24px"
            text-anchor="middle"
            fill="white"
            style="filter: url(#shadow-24)"
          >
            {{this.value}}
          </text>

          <text
            x="124"
            y="8"
            font-size="14px"
            text-anchor="middle"
            fill="white"
            style="filter: url(#shadow-24)"
          >
            {{this.unit}}
          </text>
        </g>
      {{/each}}
    </g>
  </g>

  <g transform="translate(600, 30)">
    <image
      x="84"
      y="128"
      xlink:href="{{brawlerModel}}"
      width="384"
      height="442"
    />

    <g transform="translate(20, 0)">
      <rect
        x="0"
        y="0"
        width="500"
        height="62"
        rx="16"
        fill="black"
        fill-opacity="0.3"
        stroke-width="3"
      ></rect>

      {{#each brawlerStats}}
        <g transform="translate({{xOffset}}, {{yOffset}})">
          <path
            d="M24,42 L28,6 A2,2 0 0 1 30,4 L208,4 A2,2 0 0 1 210,6 L206,42 A2,2 0 0 1 204,44 L26,44 A2,2 0 0 1 24,42 Z"
            stroke="black"
            fill="black"
            fill-opacity="0.5"
          ></path>

          <image xlink:href="{{this.image}}" width="48" height="48" />

          <text
            x="124"
            y="32"
            font-size="24px"
            text-anchor="middle"
            fill="white"
            style="filter: url(#shadow-24)"
          >
            {{this.value}}
          </text>

          <text
            x="124"
            y="8"
            font-size="14px"
            text-anchor="middle"
            fill="white"
            style="filter: url(#shadow-24)"
          >
            {{this.unit}}
          </text>
        </g>
      {{/each}}

      {{#each accessories}}
        <image
          xlink:href="{{this.image}}"
          x="{{this.x}}"
          y="{{this.y}}"
          width="48"
          height="48"
        />
      {{/each}}
    </g>
  </g>
</svg>
